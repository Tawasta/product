<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.view.form.tree.limit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="warning_info" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="tree_view_limit">
                    <div class="o_setting_right_pane">
                        <label for="tree_view_limit"/>
                        <div class="text-muted">
                            Set the number of product shown on tree views per page
                        </div>
                        <field name="tree_view_limit"/>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
