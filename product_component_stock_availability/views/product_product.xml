<?xml version="1.0" ?>
<openerp>
    <data>
        <record id="product_component_stock_availability_variant_form" model="ir.ui.view" >
            <field name="name">product.component.stock.availability.variant.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Component Stock Levels" 
                          attrs="{ 'invisible': [('component_bom_id', '=', False)] }">
                        <group>
                            <field name="component_bom_id" string="BOM"/>
                        </group>

                        <field name="bom_component_ids">
                            <tree>
                                <field name="name"/>
                                <field name="qty_available"/>
                                <field name="virtual_available"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</openerp>

