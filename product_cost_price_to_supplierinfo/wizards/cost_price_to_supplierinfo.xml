<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="cost_price_to_supplierinfo_form" model="ir.ui.view">
        <field name="name">cost_price_to_supplierinfo.form</field>
        <field name="model">product_cost_price_to_supplierinfo.cost_price_wizard</field>
        <field name="arch" type="xml">
            <form string="Copy cost price to supplierinfo">
                <sheet>
                    <group>
                        <p>
                            Cost prices for the selected products will be copied to supplierinfo.
                        </p>
                        <p>
                            <ul>
                                <li>If a supplierinfo row exists for some partner, create another row with the cost price applied. 
                                The new one gets a higher priority (lower sequence). Old rows can be deleted manually later if so wanted.</li>
                                <li>If a row does not exist, create one by finding what partner the product was previously purchased from</li>
                                <li>If no purchase orders exist, create the supplierinfo row with a placeholder supplier.</li>
                            </ul>
                        </p>
                    </group>
                    <group>

                    </group>
                    <footer>
                        <button string="Confirm" 
                            name="copy_cost_price" 
                            type="object" class="btn-primary"/> or
                        <button string="Cancel" 
                            class="btn-default" 
                            special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="cost_price_to_supplierinfo_action" model="ir.actions.act_window">
        <field name="name">Copy cost price to supplierinfo</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product_cost_price_to_supplierinfo.cost_price_wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="cost_price_to_supplierinfo_form"/>
        <field name="target">new</field>
        <field name="groups_id" eval="[(4, ref('product_cost_price_to_supplierinfo.allow_cost_price_to_supplierinfo'))]" />
    </record>
</odoo>
