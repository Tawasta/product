                    <field name="royalty_lyricists" string="Lyricist" filter_domain="[('royalty_lyricists.recipient', 'ilike', self)]"/>
                    <field name="royalty_translators" string="Translator" filter_domain="[('royalty_translators.recipient', 'ilike', self)]"/>
